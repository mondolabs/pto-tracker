<h1>
	<%= current_user.full_name %>'s Dashboard	
</h1>
<hr>
<%= link_to 'Create New PTO Request', new_user_request_path(current_user) %>
<hr>

<h4>
	Name: <%= current_user.full_name %>
</h4>

<h4>
	Position: <%= current_user.position %>
</h4>

<%- if current_user.team %>	
	<h4>
		Manager: <%= User.find(current_user.team.manager_id).full_name %>
	</h4>
<%- end %>


<%- if current_user.admin? %>
	<%= link_to 'Edit', edit_user_path(current_user) %>
<%- end %>

<%- unless current_user.employee? || current_user.managed_teams && current_user.managed_teams.blank? %>
	<hr>
	<h4>
		Managed Teams:
	</h4>
	<% for team in @managed_teams %>
		<%= link_to "#{team.team_name}", team_path(team) %><br>
	<% end %>
	
	<hr>
<% end -%>


